<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="402.0" prefWidth="598.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iamsinghankit.javafxlearning.RadioController">
   <children>
      <RadioButton fx:id="rButton1" layoutX="28.0" layoutY="212.0" mnemonicParsing="false" onAction="#getFood" prefHeight="24.0" prefWidth="78.0" text="Pizza">
         <font>
            <Font size="18.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="food" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rButton2" layoutX="236.0" layoutY="212.0" mnemonicParsing="false" onAction="#getFood" prefHeight="24.0" prefWidth="78.0" text="Sushi" toggleGroup="$food">
         <font>
            <Font size="18.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="rButton3" layoutX="430.0" layoutY="212.0" mnemonicParsing="false" onAction="#getFood" prefHeight="24.0" prefWidth="98.0" text="Ramen" toggleGroup="$food">
         <font>
            <Font size="18.0" />
         </font>
      </RadioButton>
      <Label fx:id="myLabel" alignment="CENTER" layoutX="1.0" layoutY="93.0" prefHeight="17.0" prefWidth="598.0" text="Select what you want to eat?">
         <font>
            <Font name="Baghdad Regular" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
