<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane onMouseEntered="#displayImage" prefHeight="399.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iamsinghankit.javafxlearning.ImageViewController">
   <children>
      <Button fx:id="myButton" layoutX="238.0" layoutY="360.0" mnemonicParsing="false" onAction="#displayImage" prefHeight="26.0" prefWidth="107.0" text="Button" />
      <ImageView fx:id="myImageView" fitHeight="310.0" fitWidth="526.0" layoutX="37.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@shrek1.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Glow>
               <input>
                  <SepiaTone />
               </input>
            </Glow>
         </effect>
      </ImageView>
   </children>
</AnchorPane>
